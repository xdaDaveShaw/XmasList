{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "runner": "terminal",
  "args": [],
  "options": {
    "cwd": "${workspaceRoot}/src"
  },
  "tasks": [
    {
      "label": "Start",
      "args": [ "run", "start" ],
      "command": "yarn",
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "type": "shell",
      "problemMatcher": {
        "fileLocation": "absolute",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "webpack: Compiling"
          },
          "endsPattern": {
            "regexp": "webpack: (Compiled successfully|Failed to compile)"
          }
        },
        "pattern": {
          "regexp": "^(.*)\\((\\d+),(\\d+)\\): \\((\\d+),(\\d+)\\) (warning|error) FABLE: (.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "endLine": 4,
          "endColumn": 5,
          "severity": 6,
          "message": 7
        }
      }
    },
    {
      "label": "Build JS Tests",
      "args": [
        "test-buildwatch"
      ],
      "command": "yarn",
      "isBackground": true,
      "group": "none",
      "type": "shell",
      "problemMatcher": {
        "fileLocation": "absolute",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "webpack: Compiling"
          },
          "endsPattern": {
            "regexp": "webpack: (Compiled successfully|Failed to compile)"
          }
        },
        "pattern": {
          "regexp": "^(.*)\\((\\d+),(\\d+)\\): \\((\\d+),(\\d+)\\) (warning|error) FABLE: (.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "endLine": 4,
          "endColumn": 5,
          "severity": 6,
          "message": 7
        }
      }
    },
    {
      "label": "Run JS Tests",
      "args": [
        "test-watch"
      ],
      "command": "yarn",
      "isBackground": true,
      "type": "shell",
      "problemMatcher": {
        "fileLocation": "absolute",
        "background": {
          "activeOnStart": true,
        },
        "pattern": {
          "regexp": "failed"
        }
      }
    },
    {
      "label": "Run dotnet Tests",
      "args": [
        "watch",
        "run"
      ],
      "command": "dotnet",
      "options": {
        "cwd": "${workspaceRoot}/tests"
      },
      "isBackground": true,
      "type": "process",
      "problemMatcher": {
        "fileLocation": "absolute",
        "background": {
          "activeOnStart": true,
        },
        "pattern": {
          "regexp": "failed"
        }
      }
    },
    {
      "label": "Test",
      "dependsOn": [ "Build JS Tests", "Run JS Tests", "Run dotnet Tests" ],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
